<%= form_with model: product do |form| %>
  <div class="form-group">
    <%= form.label :Tên, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :Giá, class: "form-label" %>
    <%= form.text_field :price, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :"Mô tả", class: "form-label", style: "display: block" %>
    <%= form.rich_text_area :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :"Ảnh", class: "form-label", style: "display: block" %>
    <%= form.file_field :featured_image, accept: "image/*", class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "form-submit" %>
  </div>
<% end %>
