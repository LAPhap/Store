<%= image_tag @product.featured_image, class: "product-image" if @product.featured_image.attached? %>
<h1 class="product-title"><%= @product.name %></h1>
<p class="product-price">Giá: <%= @product.price %></p>
<p class="product-description"><%= @product.description %></p>

<div class="product-links">
  <%= link_to "Quay lại", products_path, class: "product-link" %>
  <%= link_to "Sửa", edit_product_path(@product), class: "product-link" %>
  <%= button_to "Xóa", @product, method: :delete, data: { turbo_confirm: "Bạn chắc chưa?" }, class: "product-button" %>
</div>
