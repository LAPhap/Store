<%= image_tag @product.featured_image if @product.featured_image.attached? %>
<h1><%= @product.name %></h1>
<p>Giá: <%= @product.price %></p>
<%= @product.description %>


<%= link_to "Quay lại", products_path %>
<%= link_to "sửa", edit_product_path(@product) %>
<%= button_to "Xóa", @product, method: :delete, data: { turbo_confirm: "Bạn chắc chưa?" } %>